generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id             String   @id @default(cuid())
  roomId         String   @unique
  joinToken      String   @unique
  passwordHashed String
  createdAt      DateTime @default(now())
  hostToken      String   @unique

  isActive       Boolean   @default(false)
  videoStartTime DateTime?
  movieUrl       String?
  updatedAt      DateTime  @updatedAt
  members        User[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  picture   String?
  createdAt DateTime @default(now())
  joinToken String?
  hostToken String?
  updatedAt DateTime @updatedAt
  room      Room?    @relation(fields: [roomId], references: [id])
  roomId    String?
}

model Movie {
  id            String   @id @default(cuid())
  title         String
  description   String
  thumbnailUrl  String
  rating        Float
  year          Int
  genre         String
  duration      Int
  createdAt     DateTime @default(now())
  muxAssetId    String   @unique
  muxPlaybackId String   @unique
  updatedAt     DateTime @updatedAt
}
